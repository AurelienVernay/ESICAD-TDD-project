{
  "name": "esicad-tdd",
  "version": "1.0.0",
  "description": "Installez les dépendances à l'aide de la commande `npm install`",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "author": "Aurélien VERNAY",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.24.4",
    "@babel/preset-env": "7.24.4",
    "@babel/preset-typescript": "7.24.1",
    "babel-jest": "29.7.0",
    "jest": "29.7.0",
    "typescript": "5.4.5"
  }
}
